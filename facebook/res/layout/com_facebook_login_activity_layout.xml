<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balloon_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"    
    android:orientation="vertical" 
   >   
    
   <TextView
            android:id="@+id/fb_login_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="Facebook Login"   
            android:textColor="@android:color/white"
            android:textSize="20dip"
            android:padding="8.0dip"    
            android:gravity="center_horizontal"
            android:background="@color/fb_blue"          
   />      
         
  <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="15dip"
     > 
      
        <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_centerHorizontal="true"
        android:padding="10dip" >
        
            <TableRow
            android:layout_gravity="center_horizontal"            
            android:paddingBottom="5dp" 
            >
            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:paddingRight="10dip"                
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/bullet_blue_plain" />

             <TextView
        android:id="@+id/textView1"
        android:textColor="@color/fb_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"            
        android:text="One time facebook login"
        android:textSize="20dip"/>
             
        </TableRow>
        <TableRow
            android:layout_gravity="center_horizontal"            
            android:paddingBottom="5dp" >
            <ImageView
              android:layout_width="15dip"
                android:layout_height="15dip"
                android:paddingRight="10dip"
               
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/bullet_blue_plain" />

             <TextView
        android:id="@+id/textView2"
        android:textColor="@color/fb_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"            
        android:text="Establish you authenticity"
        android:textSize="20dip"/>
                   
        </TableRow>

        <TableRow android:paddingBottom="5dp" >

             <ImageView
                android:layout_marginTop="7dip"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:paddingRight="10dip"
                
                android:layout_gravity="right"
                android:src="@drawable/bullet_blue_plain" />

             <TextView
        android:id="@+id/textView3"
        android:textColor="@color/fb_blue"
        android:layout_width="80dip"
        android:layout_height="wrap_content"            
        android:text="Chat with users"
        android:textSize="20dip" />
        </TableRow>

      </TableLayout>  

  
   
     <ImageView
        android:id="@+id/main_hopinlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"             
        android:src="@drawable/hopinlogo" 
        android:layout_centerInParent="true" 
        android:layout_margin="5dip" 
        android:layout_below="@id/tableLayout1"      
        />
     
 
   
 <ProgressBar android:indeterminate="true"
                 android:layout_width="wrap_content"
                 android:layout_height="30dip"
                 android:id="@+id/com_facebook_login_activity_progress_bar"
                 android:layout_centerInParent="true"
                 android:visibility="gone"
                 android:indeterminateOnly="true" 
                 android:layout_below="@id/main_hopinlogo"               
            />
     
  <TextView
        android:id="@+id/disclaimer"
        android:textColor="@android:color/black"        
        android:layout_marginTop="10dip"
        android:textSize="15dip"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="10dip"     
        android:gravity="center_horizontal"      
        android:text="*we do not post on wall, only access basic public info and email"
        android:layout_below="@id/com_facebook_login_activity_progress_bar"
          /> 
</RelativeLayout>
</LinearLayout>