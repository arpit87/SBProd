<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/transparent">
<LinearLayout 
    android:id="@+id/self_profile_aboutme_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:background="@drawable/square_rectangle_white_with_backgroundshadow"    
    android:layout_marginLeft="4dip"
     android:layout_marginRight="4dip"
     android:layout_marginTop="20dip"
    >  
 <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     
     >
     
     <ImageView 
         android:id="@+id/self_aboutme_worksatimage"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/workicon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/self_aboutme_worksattext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Works at"  
        android:textStyle="bold"      
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/self_aboutme_worksatimage"
        android:paddingLeft="2dip"
        android:textSize="15dip"/>
   
 
       <TextView 
        android:id="@+id/self_aboutme_worksat" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"
        android:text="Nomura Pvt Ltd"        
        android:layout_below="@+id/self_aboutme_worksattext"
       android:layout_toRightOf="@id/self_aboutme_worksatimage"
        android:textSize="20dip"
        android:paddingLeft="2dip"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        
        />  
        
       </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:padding="4dip"/>
  <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/self_aboutme_educationimage"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/educationicon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/self_aboutme_educationtext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Education"  
        android:textStyle="bold"      
        android:paddingLeft="2dip"
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/self_aboutme_educationimage"
       
        android:textSize="15dip"/>
   
 
       <TextView 
        android:id="@+id/self_aboutme_education" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"
        android:text="IIT Kharagpur"        
        android:layout_below="@id/self_aboutme_educationtext"
       android:layout_toRightOf="@id/self_aboutme_educationimage"
        android:textSize="20dip"
        android:paddingLeft="2dip"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        
        />  
        
       </RelativeLayout>
      <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:padding="4dip"/>
       
   <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/self_aboutme_hometownimage"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/homeicon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/self_aboutme_hometowntext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HomeTown"  
          android:paddingLeft="2dip"
        android:textStyle="bold"      
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/self_aboutme_hometownimage"
       
        android:textSize="15dip"/>
   
 
       <TextView 
        android:id="@+id/self_aboutme_hometown" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dip"
        android:text="Raipur"        
        android:layout_below="@+id/self_aboutme_hometowntext"
       android:layout_toRightOf="@id/self_aboutme_hometownimage"
        android:textSize="20dip"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        
        />  
        
       </RelativeLayout>
      <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:padding="4dip"/>    
        
   <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/self_aboutme_currentcityimage"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/city_icon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/self_aboutme_currentcitytext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current city"  
          android:paddingLeft="2dip"
        android:textStyle="bold"      
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/self_aboutme_currentcityimage"
       
        android:textSize="15dip"/>
   
 
       <TextView 
        android:id="@+id/self_aboutme_currentcity" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dip"
        android:text="Mumbai"        
        android:layout_below="@+id/self_aboutme_currentcitytext"
       android:layout_toRightOf="@id/self_aboutme_currentcityimage"
        android:textSize="20dip"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        
        />  
        
       </RelativeLayout>
</LinearLayout>
</ScrollView>