<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              android:gravity="center_horizontal" >

    <TextView
            android:id="@+id/contacts_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2.0dip"
            android:paddingTop="2.0dip"
            android:text="Contacts"
            android:textColor="@color/black"
            android:textSize="20dip"
            android:textStyle="bold" 
            android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/contactslist_layout_refresh"
         android:layout_height="30dip"
        android:layout_width="30dip"
        android:background="@drawable/refresh_icon"
        android:layout_alignParentRight="true" 
        />
    <FrameLayout
            android:id="@+id/contactslist_layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_rectangle_background_gray"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_below="@id/contacts_header_text" />

</RelativeLayout>