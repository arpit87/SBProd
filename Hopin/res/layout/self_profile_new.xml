<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" 
    android:background="@color/very_light_gray" 
     >   

    <TextView
        android:id="@+id/self_profile_new_nearbyusername"
        android:layout_width="match_parent"
        android:layout_height="50dip" 
        android:text="Arpit Mishra"        
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:typeface="sans"
        android:textSize="30dip"        
        android:textStyle="bold"        
        android:background="@drawable/gradient_green"
        android:paddingLeft="110dip"
        android:gravity="center_vertical"
        />      
    
   <LinearLayout
      android:id="@+id/self_profile_new_border"
      android:layout_width="match_parent"
      android:layout_height="match_parent"      
      android:orientation="vertical"       
      android:layout_marginTop="50dip"    
    
       >
     <View android:layout_width="match_parent"
         android:layout_height="1dip"
         android:background="@color/black"></View>
    <ImageView 
         android:id="@+id/self_profile_new_cover"
          android:layout_width="match_parent"
          android:layout_height="160dip"
          android:src="@drawable/hopinlogo" 
          android:scaleType="centerCrop"         
          />    
      
      <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
           android:background="@drawable/transparent_black"             
            >     
               
        <Button android:id="@+id/self_profile_new_abountme"
            android:layout_width="0dip"
            android:layout_weight="1" android:layout_height="wrap_content"
            android:text="About me"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textSize="17dip"
            android:textColor="@color/off_white"
            android:background="@drawable/borderless_tabs">
        </Button>
        <View android:layout_height="15dip"
            android:layout_width="1dip"
            android:layout_gravity="center_vertical"
            android:background="@color/very_light_gray">
            
        </View>
        <Button android:id="@+id/self_profile_new_friendtab"
             android:layout_height="wrap_content"
             android:layout_width="0dip"
            android:layout_weight="1"
             android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textSize="17dip"
            android:text="Hopin friends"
            android:textColor="@color/off_white"
            android:background="@drawable/borderless_tabs">
        </Button>       
    </LinearLayout>
   
    <android.support.v4.view.ViewPager
        android:id="@+id/self_profile_new_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />        
  </LinearLayout> 
  
  
   <ImageView
        android:id="@+id/self_profile_new_image"
        android:layout_width="62dp"
        android:layout_height="62dp"             
        android:layout_marginLeft="24dip"
        android:layout_marginTop="5dip"  
        android:background="@drawable/userpicicon_white"
        android:scaleType="fitXY"
         />  
         
   <ImageView
        android:id="@+id/self_profile_new_imageframe"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/icon_frame"       
        android:layout_marginLeft="22dip"
        android:layout_marginTop="3dip"        
         
         />
    
   
           
