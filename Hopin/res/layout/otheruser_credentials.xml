<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:background="@drawable/square_rectangle_white_with_backgroundshadow"
    android:layout_marginLeft="4dip"
     android:layout_marginRight="4dip"
     android:layout_marginTop="20dip"
    >  
 <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/otheruser_credentials_emailicon"
         android:layout_height="35dip"
         android:layout_width="35dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/emailicon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/otheruser_credentials_emailtext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email verification"  
        android:textStyle="bold"      
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/otheruser_credentials_emailicon"
        android:paddingLeft="2dip"
        android:textSize="20dip"/>
   
       <TextView
           android:id="@+id/otheruser_credentials_emailstatus"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/otheruser_credentials_emailtext"
           android:layout_marginLeft="0dip"
           android:layout_toRightOf="@id/otheruser_credentials_emailicon"
           android:gravity="center_vertical"
           android:paddingLeft="2dip"
           android:textColor="@color/black"
           android:textSize="20dip" />
        
       </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:padding="4dip"/>
  <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/otheruser_credentials_friendimg"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/friends_icon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/otheruser_credentials_friendtext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook friends"  
        android:textStyle="bold"      
        android:paddingLeft="2dip"
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/otheruser_credentials_friendimg"
       
        android:textSize="20dip"/>
   
       <TextView
           android:id="@+id/otheruser_credentials_friendnum"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/otheruser_credentials_friendtext"
           
           android:layout_toRightOf="@id/otheruser_credentials_friendimg"
           android:gravity="center_vertical"
           android:paddingLeft="2dip"
           android:textColor="@color/black"
           android:textSize="20dip" />
        
       </RelativeLayout>
      <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:padding="4dip"/>
       
   <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/otheruser_credentials_mutualfriendsimg"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/mutual_friend_icon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/otheruser_credentials_mutualfriendstext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mutual friends"  
          android:paddingLeft="2dip"
        android:textStyle="bold"      
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/otheruser_credentials_mutualfriendsimg"
       
        android:textSize="20dip"/>
   
       <TextView
           android:id="@+id/otheruser_credentials_mutualfriendsnum"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/otheruser_credentials_mutualfriendstext"
           android:layout_toRightOf="@id/otheruser_credentials_mutualfriendsimg"
           android:gravity="center_vertical"
           android:paddingLeft="2dip"
           android:textColor="@color/black"
           android:textSize="20dip" />
        
       </RelativeLayout>
</LinearLayout>
</ScrollView>