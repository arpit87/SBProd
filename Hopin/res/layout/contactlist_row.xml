<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_selector"
                android:orientation="horizontal" >

    <ImageView
            android:id="@+id/contactlist_image_frame"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_frame"
            android:layout_margin="3dip"
            android:layout_centerVertical="true"
            />

    <ImageView
            android:id="@+id/contactlist_image"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_margin="5dip"
            android:layout_centerVertical="true"
            />

    <TextView
            android:id="@+id/contactlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="20dip"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginTop="2dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/contactlist_image_frame"/>
    
    <ImageView
            android:id="@+id/contactlist_status_online"
            android:layout_width="15dip"
            android:layout_height="15dip"            
            android:scaleType="centerInside"
            android:src="@drawable/chat_dot_green"
            android:layout_marginTop="15dip"  
            android:layout_marginRight="10dip"   
            android:layout_alignParentRight="true"  
            android:visibility="invisible"      
            />
      
      <ImageView
            android:id="@+id/contactlist_status_offline"
            android:layout_width="15.0dip"
            android:layout_height="15dip"                             
            android:scaleType="centerInside"
            android:layout_marginTop="15dip"
             android:layout_marginRight="10dip" 
            android:src="@drawable/chat_dot_gray" 
            android:layout_alignParentRight="true"           
            />           
   

</RelativeLayout>