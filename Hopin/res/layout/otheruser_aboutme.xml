<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:background="@drawable/square_rectangle_white_with_backgroundshadow"
    android:layout_marginLeft="4dip"
     android:layout_marginRight="4dip"
     android:layout_marginTop="20dip"
    >  
 <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/otheruser_aboutme_worksatimg"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/workicon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/otheruser_aboutme_worksattext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Works at"  
        android:textStyle="bold"      
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/otheruser_aboutme_worksatimg"
        android:paddingLeft="2dip"
        android:textSize="20dip"/>
   
 
       <TextView 
        android:id="@+id/otheruser_aboutme_worksat" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"
               
        android:layout_below="@+id/otheruser_aboutme_worksattext"
       android:layout_toRightOf="@id/otheruser_aboutme_worksatimg"
        android:textSize="20dip"
        android:paddingLeft="2dip"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        />  
        
       </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:padding="4dip"/>
  <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/otheruser_aboutme_educationimg"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/educationicon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/otheruser_aboutme_educationtext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Education"  
        android:textStyle="bold"      
        android:paddingLeft="2dip"
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/otheruser_aboutme_educationimg"
        
        android:textSize="20dip"/>
   
 
       <TextView 
        android:id="@+id/otheruser_aboutme_education" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"
             
        android:layout_below="@id/otheruser_aboutme_educationtext"
       android:layout_toRightOf="@id/otheruser_aboutme_educationimg"
        android:textSize="20dip"
        android:paddingLeft="2dip"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        />  
        
       </RelativeLayout>
      <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:padding="4dip"/>
       
   <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/otheruser_aboutme_hometownimg"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/homeicon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/otheruser_aboutme_hometowntext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HomeTown"  
          android:paddingLeft="2dip"
        android:textStyle="bold"      
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/otheruser_aboutme_hometownimg"
       
        android:textSize="20dip"/>
   
 
       <TextView 
        android:id="@+id/otheruser_aboutme_hometown" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dip"
              
        android:layout_below="@+id/otheruser_aboutme_hometowntext"
       android:layout_toRightOf="@id/otheruser_aboutme_hometownimg"
        android:textSize="20dip"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        />  
        
       </RelativeLayout>
       
   <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:padding="4dip"/>
       
   <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
     >
     
     <ImageView 
         android:id="@+id/otheruser_aboutme_currentcityimg"
         android:layout_height="40dip"
         android:layout_width="40dip"
         android:layout_alignParentLeft="true"
         android:src="@drawable/city_icon"
         android:layout_margin="4dip"
         android:layout_centerVertical="true"/>
    
    <TextView
       
        android:id="@+id/otheruser_aboutme_currentcitytext" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current city"  
          android:paddingLeft="2dip"
        android:textStyle="bold"      
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/otheruser_aboutme_currentcityimg"
       
        android:textSize="20dip"/>
   
 
       <TextView 
        android:id="@+id/otheruser_aboutme_currentcity" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dip"
              
        android:layout_below="@+id/otheruser_aboutme_currentcitytext"
       android:layout_toRightOf="@id/otheruser_aboutme_currentcityimg"
        android:textSize="20dip"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        />  
        
       </RelativeLayout>
</LinearLayout>
</ScrollView>