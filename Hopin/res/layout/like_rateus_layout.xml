<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
       
    
     <ImageView
        android:id="@+id/likeusrateus_hopinlogo"
        android:layout_width="wrap_content"
        android:layout_height="0dip"             
        android:src="@drawable/hopinonlylogo" 
        android:layout_weight="1"
        android:layout_margin="5dip"       
        /> 
        
      <View android:layout_height="1dip"
     android:layout_width="match_parent"
     android:background="@color/very_light_gray"
     android:layout_marginBottom="18dip"/>  

       <TextView
        android:id="@+id/likeusrateus_fbtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:text="Check out our facebook page"
        android:textColor="@color/gray"
        android:textSize="20dp" 
        android:gravity="center_horizontal"/>
  
    <ImageView
        android:id="@+id/likeusrateus_fbbutton"
        android:layout_width="220dip"
        android:layout_height="0dip"             
        android:src="@drawable/fblogin_likebutton_selector"         
        android:layout_weight=".6" 
        android:layout_gravity="center"    
        />
        
 <View android:layout_height="1dip"
     android:layout_width="match_parent"
     android:background="@color/very_light_gray"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="18dip"/>    
      
    <TextView
        android:id="@+id/likeusrateus_playtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:text="Do we deserve 5 star?"
      	 android:textColor="@color/gray"
        android:textSize="20dp" 
        android:gravity="center_horizontal" />
   <ImageView
        android:id="@+id/likeusrateus_googleplaybutton"
        android:layout_width="220dip"
        android:layout_height="0dip"             
        android:src="@drawable/play_ratebutton_selector" 
        android:layout_weight=".6"
        android:layout_margin="5dip"
        android:layout_gravity="center"        
        />
    
</LinearLayout>