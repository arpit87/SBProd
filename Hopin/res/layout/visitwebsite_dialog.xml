<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@android:color/transparent">
<RelativeLayout
        android:id="@+id/visitwebsite_header_layout"      
        android:background="@drawable/balloon_expanded_opaquetop"
        android:layout_height="wrap_content"
        android:layout_width="260dip"
        android:paddingLeft="5dip"
    	android:paddingRight="3dip"
    	>

            <TextView
            android:id="@+id/visitwebsite_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="20dip"                       
            android:layout_marginLeft="1.0dip" 
            android:layout_centerVertical="true" 
            android:textColor="@color/white"  
            android:text="Hopin website" 
            android:layout_alignParentLeft="true" 
                   
             />
                     
            
        <ImageView
            android:id="@+id/visitwebsite_close_button"
            android:layout_width="30dip"
            android:layout_height="30dip"            
            android:src="@drawable/button_close_white"
            android:paddingRight="5dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"                    
            android:scaleType="centerCrop" />
            
     </RelativeLayout>    
<LinearLayout 
    android:id="@+id/visitwebsite_main_layout"
    android:layout_width="260dip"
    android:layout_height="wrap_content"
    android:background="@drawable/balloon_expanded_bottom"    
    android:orientation="vertical"
    android:paddingBottom="20dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    
     >
    
   <TextView
            android:layout_marginTop="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal"
            android:text="  Find rides while you are  "   
            android:textColor="@color/black"
            android:textSize="18dip"
            android:padding="2.0dip"   
            android:layout_gravity="center_horizontal"                
             /> 
             
      <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal"
            android:text="working on laptop or pc"   
            android:textColor="@color/black"
            android:textSize="18dip"
            android:padding="2.0dip"    
             android:layout_gravity="center_horizontal"                  
             /> 
             
             
             
            <TextView            
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal"
            android:text="www.hopin.co.in"   
            android:textColor="@color/frame_green"
            android:textSize="30dip"
            android:padding="2.0dip" 
             android:linksClickable="true"
             android:autoLink="web"    
             android:layout_marginBottom="10dip"               
             />            
 
</LinearLayout>

 <ImageView
     android:id="@+id/visitwebsite_launchericon"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center_horizontal"
     android:src="@drawable/launchernew" />

</LinearLayout>

